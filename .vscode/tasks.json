{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run File",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "g++-8  -DAPPLE ${file} -Wall -std=c++11 -O2 && ./a.out",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        }
    ]
}